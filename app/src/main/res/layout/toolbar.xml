<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/toolbar"
    android:background="@color/colorPrimary"
    android:elevation="4.63dp"
    android:layout_width="match_parent"
    android:layout_height="138.535dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.SearchView
        app:queryHint="Search"
        app:voiceIcon="@drawable/info"
        android:id="@+id/searchView"
        android:layout_width="326.166dp"
        android:layout_height="54.93dp"
        android:layout_marginStart="19.4dp"
        android:layout_marginTop="9.1dp"
        android:background="@drawable/empty_view_border"
        android:elevation="2.23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.appcompat.widget.SearchView>

    <ImageView
        android:layout_width="27.46dp"
        android:layout_height="27.46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22.83dp"
        android:layout_marginEnd="19.4dp"
        android:src="@drawable/info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/btn_top"
        android:text="Топ-10"
        android:background="@drawable/not_active_button"
        android:textAllCaps="false"
        android:textColor="@color/btnColors"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="19.4dp"
        android:layout_marginTop="19.4dp"
        android:layout_marginBottom="19.4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_shops"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19.4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="19.4dp"
        android:background="@drawable/not_active_button"
        android:text="Магазины"
        android:textAllCaps="false"
        android:textColor="@color/btnColors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_goods"
        app:layout_constraintStart_toEndOf="@+id/btn_top"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_goods"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="19.4dp"
        android:layout_marginEnd="19.4dp"
        android:layout_marginBottom="19.4dp"
        android:background="@drawable/not_active_button"
        android:text="Товары"
        android:textAllCaps="false"
        android:textColor="@color/btnColors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.0" />



</androidx.constraintlayout.widget.ConstraintLayout>